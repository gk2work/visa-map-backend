# Server Configuration
NODE_ENV=development
PORT=5000
FRONTEND_URL=http://localhost:5173

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/visamap

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here_min_32_characters
JWT_REFRESH_SECRET=your_super_secret_refresh_jwt_key_here_min_32_characters
JWT_EXPIRE=24h
JWT_REFRESH_EXPIRE=7d

# Email Configuration (Gmail/SendGrid)
EMAIL_SERVICE=gmail
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASS=your-app-password
EMAIL_FROM=noreply@visamap.com
EMAIL_FROM_NAME=VisaMap Team

# Alternative: SendGrid Configuration
# SENDGRID_API_KEY=your_sendgrid_api_key_here
# SENDGRID_FROM_EMAIL=noreply@visamap.com

# SMS Configuration (Twilio)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890
SMS_SERVICE_ENABLED=true

# File Upload Configuration (Cloudinary)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# Admin Configuration
ADMIN_EMAIL=admin@visamap.com
ADMIN_PASSWORD=SecureAdminPassword123!
ADMIN_FIRST_NAME=Admin
ADMIN_LAST_NAME=User

# API Configuration
API_VERSION=v1
API_BASE_URL=/api
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/jpg,application/pdf

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
BCRYPT_SALT_ROUNDS=12
SESSION_SECRET=your_session_secret_here_min_32_characters

# PDF Generation
PDF_GENERATION_TIMEOUT=30000
PDF_MAX_PAGES=50

# Logging
LOG_LEVEL=info
LOG_FILE_MAX_SIZE=20m
LOG_FILE_MAX_FILES=14d

# External Services
GOVERNMENT_API_BASE_URL=https://api.gov.uk
VISA_CHECKER_API_KEY=your_visa_checker_api_key

# Development Only
DEBUG_MODE=true
ENABLE_API_DOCS=true
CORS_ORIGIN=*

# Production Settings (Override in production .env)
# NODE_ENV=production
# DEBUG_MODE=false
# ENABLE_API_DOCS=false
# CORS_ORIGIN=https://yourdomain.com