{
  "watch": [
    "server.js",
    "config/",
    "controllers/",
    "middleware/",
    "models/",
    "routes/",
    "services/",
    "utils/"
  ],
  "ignore": [
    "node_modules/",
    "logs/",
    "uploads/",
    "tests/",
    "*.test.js",
    "*.spec.js"
  ],
  "ext": "js,json",
  "env": {
    "NODE_ENV": "development"
  },
  "delay": 1000,
  "verbose": true
}